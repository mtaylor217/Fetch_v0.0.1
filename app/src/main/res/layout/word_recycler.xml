<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/brand_title_text_view"
                style="@style/WordsStyle"
                android:layout_width="match_parent"
                android:background="@color/category_brand"
                android:text="Brand"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_brand"
                android:layout_width="match_parent"
                android:layout_height="152dp"
                android:drawSelectorOnTop="true" />

            <TextView
                android:id="@+id/item_type_title_text_view"
                style="@style/WordsStyle"
                android:layout_width="match_parent"
                android:background="@color/category_item_type"
                android:text="Item"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_item_type"
                android:layout_width="match_parent"
                android:layout_height="152dp"
                android:drawSelectorOnTop="true" />

            <TextView
                android:id="@+id/colors_title_text_view"
                style="@style/WordsStyle"
                android:layout_width="match_parent"
                android:background="@color/category_colors"
                android:text="Colors"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_colors"
                android:layout_width="match_parent"
                android:layout_height="152dp"
                android:drawSelectorOnTop="true" />

            <TextView
                android:id="@+id/delivery_time_title_text_view"
                style="@style/WordsStyle"
                android:layout_width="match_parent"
                android:background="@color/category_delivery_time"
                android:text="Delivery Time"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_delivery_time"
                android:layout_width="match_parent"
                android:layout_height="152dp"
                android:drawSelectorOnTop="true" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>